[
{% for solution in site.solutions %}
{
  "title"               : "{{ solution.title }}",
  "type"                : "solution",
  "where"               : "{{ solution.where }}",
  "when"                : "{{ solution.when }}",
  "who"                 : "{{ solution.who }}",
  "related_values"      : [{% for item in solution.values %}"{{ item }}",{% endfor %} null],
  "related_theories"    : [{% for item in solution.related_theories %}"{{ item }}",{% endfor %} null],
  "related_tactics"     : [{% for item in solution.related_tactics %}"{{ item }}",{% endfor %} null],
  "contributors"        : [{% for item in solution.contributors %}"{{ item }}",{% endfor %} null],
  "learn_more"          : [{% for item in solution.learn_more %}"{{ item }}",{% endfor %} null],
  "tags"                : [{% for tag in solution.tags %}"{{ tag }}",{% endfor %} null],
  "images"              : [{% for image in solution.images %} 
                            { "url" : "{{ image.url }}", 
                              "caption" : "{{ image.caption}}", 
                              "source" : "{{ image.source }}" },
                           {% endfor %} null],
  "href"                : "{{ solution.url }}",
  "slug"                : "{{ solution.title | downcase | replace: ' ', '-' }}",
  "short_write_up"      : "{{ solution.short_write_up }}",
  "full_write_up"       : "{{ solution.content | strip_newlines }}"
}
  {% if forloop.last %}{% else %},{% endif %}
{% endfor %}
]
