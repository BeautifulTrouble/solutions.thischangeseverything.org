[
{% for theory in site.theories %}
{
  "title"               : "{{ theory.title }}",
  "type"                : "theory",
  "related_values"      : [{% for item in theory.values %}"{{ item }}",{% endfor %} null],
  "related_theories"    : [{% for item in theory.related_theories %}"{{ item }}",{% endfor %} null],
  "related_solutions"   : [{% for item in theory.related_theories %}"{{ item }}",{% endfor %} null],
  "contributors"        : [{% for item in theory.contributors %}"{{ item }}",{% endfor %} null],
  "learn_more"          : [{% for item in theory.learn_more %}"{{ item }}",{% endfor %} null],
  "tags"                : [{% for tag in theory.tags %}"{{ tag }}",{% endfor %} null],
  "images"              : [{% for image in theory.images %} 
                            { "url" : "{{ image.url }}", 
                              "caption" : "{{ image.caption}}", 
                              "source" : "{{ image.source }}" },
                           {% endfor %} null],
  "href"                : "{{ theory.url }}",
  "slug"                : "{{ theory.title | downcase | replace: ' ', '-' }}",
  "short_write_up"      : "{{ theory.short_write_up }}",
  "full_write_up"       : "{{ theory.content | strip_newlines }}"
}
  {% if forloop.last %}{% else %},{% endif %}
{% endfor %}
]
